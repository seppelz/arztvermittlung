{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { 
      "src": "/assets/(.*)", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1" 
    },
    { 
      "src": "/(.*).js", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1.js" 
    },
    { 
      "src": "/(.*).css", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1.css" 
    },
    { 
      "src": "/(.*).svg", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1.svg" 
    },
    { 
      "src": "/(.*).ico", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1.ico" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 