{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "redirects": [
    { "source": "https://med-match.de/:path*", "destination": "https://www.med-match.de/:path*", "permanent": true }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)\\.css$",
      "headers": { "Content-Type": "text/css" },
      "dest": "/assets/$1.css"
    },
    {
      "src": "^/assets/(.*)\\.js$",
      "headers": { "Content-Type": "application/javascript" },
      "dest": "/assets/$1.js"
    },
    {
      "src": "^/assets/(.*)\\.svg$",
      "headers": { "Content-Type": "image/svg+xml" },
      "dest": "/assets/$1.svg"
    },
    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },
    {
      "src": "^/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "memory": 1024,
        "maxDuration": 60
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true
      }
    }
  ]
} 